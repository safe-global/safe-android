<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextButton">
        <item name="android:textColor">@color/text_button_color</item>
        <item name="android:drawableTint">@color/primary</item>
        <item name="android:foreground">@drawable/background_selectable</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/dm_sans_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ToolbarButton">
        <item name="android:textColor">@color/text_button_color</item>
        <item name="android:drawableTint">@color/primary</item>
        <item name="android:foreground">@drawable/background_selectable</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/dm_sans_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.09</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>
</resources>
