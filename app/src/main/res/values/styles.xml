<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:statusBarColor">@color/background_secondary</item>
        <item name="android:navigationBarColor">@color/background_secondary</item>
        <item name="actionMenuTextColor">@color/toolbar_action</item>
        <item name="colorControlNormal">@color/toolbar_action</item>
        <item name="snackbarStyle">@style/SnackbarStyle</item>
        <item name="badgeStyle">@style/BadgeStyle</item>
    </style>

    <style name="DayNightThemeBase" parent="AppTheme" />

    <style name="DayNightTheme" parent="DayNightThemeBase" />

    <style name="SnackbarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:backgroundTint">@color/label_primary</item>
        <item name="android:textColor">@color/background_primary</item>
    </style>

    <style name="BadgeStyle" parent="@style/Widget.MaterialComponents.Badge">
        <item name="backgroundColor">@color/warning</item>
    </style>

    <style name="FuturePrimaryButton">
        <item name="android:layout_height">@dimen/primary_button_height</item>
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:layout_height">@dimen/primary_button_height</item>
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textColor">@drawable/button_primary_text</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/dm_sans_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="RejectButton" parent="PrimaryButton">
        <item name="android:background">@drawable/button_reject</item>
        <item name="android:textColor">@color/white_two</item>
    </style>

    <style name="ConfirmButton" parent="PrimaryButton">
        <item name="android:background">@drawable/button_confirm</item>
        <item name="android:textColor">@color/white_two</item>

    </style>

    <style name="TextButton">
        <item name="android:textColor">@color/text_button_color</item>
        <item name="android:foreground">@drawable/background_selectable</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/dm_sans_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text" parent="TextAppearance.AppCompat">
        <!--
        Only use this to set font.
        All other attributes will overwrite default values for EVERY view
        -->
    </style>

    <style name="TextTitle" parent="Text">
        <item name="fontFamily">@font/dm_sans_regular</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">@color/label_primary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextTitleSection" parent="Text">
        <item name="fontFamily">@font/dm_sans_regular</item>
        <item name="android:lineSpacingExtra">@dimen/default_line_spacing</item>
        <item name="android:textColor">@color/label_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextDark" parent="Text">
        <item name="fontFamily">@font/dm_sans_medium</item>
        <item name="android:lineSpacingExtra">@dimen/default_line_spacing</item>
        <item name="android:textColor">@color/label_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextDarkRegular" parent="TextDark">
        <item name="fontFamily">@font/dm_sans_regular</item>
    </style>

    <style name="TextDark.Bold" parent="TextDark">
        <item name="fontFamily">@font/dm_sans_regular</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextLink" parent="Text">
        <item name="fontFamily">@font/dm_sans_medium</item>
        <item name="android:textColor">@color/link</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">@dimen/default_line_spacing</item>
    </style>

    <style name="TextMedium" parent="Text">
        <item name="fontFamily">@font/dm_sans_medium</item>
        <item name="android:lineSpacingExtra">@dimen/default_line_spacing</item>
        <item name="android:textColor">@color/label_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextMediumRegular" parent="TextMedium">
        <item name="fontFamily">@font/dm_sans_regular</item>
    </style>

    <style name="TextLight" parent="Text">
        <item name="fontFamily">@font/dm_sans_regular</item>
        <item name="android:lineSpacingExtra">@dimen/default_line_spacing</item>
        <item name="android:textColor">@color/label_tertiary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextLight.Small" parent="TextLight">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAction" parent="Text">
        <item name="fontFamily">@font/dm_sans_medium</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/header_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/dm_sans_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/label_tertiary</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:background">@color/background_primary</item>
    </style>

    <style name="Helptext">
        <item name="android:paddingTop">@dimen/default_small_margin</item>
        <item name="android:paddingBottom">@dimen/default_small_margin</item>
        <item name="android:paddingStart">@dimen/default_margin</item>
        <item name="android:paddingEnd">@dimen/default_margin</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/dm_sans_regular</item>
        <item name="android:textColor">@color/label_secondary</item>
    </style>

    <style name="ChainRibbon">
        <item name="fontFamily">@font/dm_sans_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/white_two</item>
        <item name="android:background">#29b6af</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SafeOverviewToolbar">
        <item name="theme">?attr/actionBarTheme</item>
        <item name="android:background">@color/background_secondary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">72dp</item>
    </style>

    <style name="Toolbar">
        <item name="theme">?attr/actionBarTheme</item>
        <item name="android:background">@color/background_secondary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="ToolbarTitle">
        <item name="fontFamily">@font/dm_sans_regular</item>
        <item name="android:lineSpacingExtra">@dimen/default_line_spacing</item>
        <item name="android:textColor">@color/label_primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ToolbarSubtitle">
        <item name="fontFamily">@font/dm_sans_medium</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">@color/label_tertiary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    <style name="ToolbarButton">
        <item name="android:textColor">@color/text_button_color</item>
        <item name="android:foreground">@drawable/background_selectable</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/dm_sans_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.09</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="android:background">@color/background_primary</item>
        <item name="tabIndicatorColor">@color/primary</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabInlineLabel">true</item>
        <item name="tabIconTint">@drawable/tab_item_text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="tabSelectedTextColor">@color/primary</item>
        <item name="tabTextAppearance">@style/TabText</item>
    </style>

    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/dm_sans_regular</item>
        <item name="android:textColor">@drawable/tab_item_text</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:gravity">start</item>
        <item name="singleLine">true</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_bottom_sheet_rounded</item>
    </style>

    <!-- Share Safe Dialog -->
    <style name="BaseDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:statusBarColor">@color/background_secondary</item>
        <item name="android:navigationBarColor">@color/background_secondary</item>
        <item name="snackbarStyle">@style/SnackbarStyle</item>
    </style>
    <style name="DayNightDialog" parent="BaseDialog"/>

    <!-- EnsInputDialog -->
    <style name="BaseFullScreenDialog" parent="Theme.MaterialComponents.DayNight">
        <item name="android:statusBarColor">@color/background_secondary</item>
        <item name="android:navigationBarColor">@color/background_secondary</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize|stateVisible</item>
    </style>
    <style name="DayNightFullscreenDialog" parent="BaseFullScreenDialog"/>

    <!-- AddressInputHelper BottomSheetDialog -->
    <style name="BaseBottomSheetDialog" parent="@style/Theme.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="DayNightBottomSheetDialogTheme" parent="BaseBottomSheetDialog">
        <item name="android:statusBarColor">@color/background_secondary</item>
        <item name="android:navigationBarColor">@color/background_secondary</item>
    </style>
    <style name="ShapeAppearanceOverlay.App.CornerSize9Percent" parent="">
        <item name="cornerSize">9%</item>
    </style>
    <style name="ShapeAppearanceOverlay.App.Circle" parent="">
        <item name="cornerSize">50%</item>
    </style>
</resources>
